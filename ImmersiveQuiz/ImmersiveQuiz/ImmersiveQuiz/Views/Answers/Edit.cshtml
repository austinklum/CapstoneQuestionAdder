@model ImmersiveQuiz.Models.Answer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h3>Answer</h3>
<hr />
<h4>@Model.Question.Content</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnswerId" />
            <div class="form-group">
                <label asp-for="IsCorrect" class="control-label"></label>
                <input asp-for="IsCorrect" class="form-control" />
                <span asp-validation-for="IsCorrect" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.Question.Location.CourseId">Back to Course</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
